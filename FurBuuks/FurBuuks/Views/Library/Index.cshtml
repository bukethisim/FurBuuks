@using FurBuuks.Models
@model List<Book>
@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .pagination {
        display: inline-block;
        margin: -4px 15px 0px 15px;
        font-size: 18px;
        vertical-align: initial;
    }

        .pagination.active {
            color: #D9534F;
            font-size: 20px;
        }
</style>

<div class="container bootstrap snippet">
    <section class="wrapper">
        <div class="text-center"><strong>@ViewBag.Error</strong></div>
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                @foreach (var item in Model)
            {
                <div class="row oylesine  @item.Id" style="margin:20px 0px;">
                    <div class="col-md-4">
                        <div class="col-xs-6 text-center">
                            <img src="@item.ImageURL" height="200" width="150" />
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="col-xs-6">
                            <label>Kitap Adı: @item.Title</label>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-6">
                                <label>Yazar: @item.Author</label>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="pull-right"><a href="/Library/AddToBook/@item.Id" class="btn btn-danger btn-sm" role="button">Kitaplığıma Ekle</a></div>
                    </div>
                </div>
        }

            </div>
        </div>

        <div class="row">
            <div class="col-sm-5"></div>
            <div class="col-sm-3">
                <div class="row text-center">

                    @if (ViewBag.PrevVisible)
                {
                    <a href="?page=@Html.Raw(ViewBag.CurrentPage-1)"><i class="fas fa-angle-double-left"></i></a>
            }

                    @{
                    string c = string.Empty;
                    }
                    @for (int i = ViewBag.Start; i <= ViewBag.End; i++)
                {
                    c = i == ViewBag.CurrentPage ? "active" : string.Empty;
                    <a href="/Library/Index?page=@i" class="@c pagination">@i</a>

            }
                    @if (ViewBag.NextVisible)
                {
                    <a href="?page=@Html.Raw(ViewBag.CurrentPage+1)"><i class="fas fa-angle-double-right"></i></a>
            }

                </div>
            </div>
        </div>

    </section>
</div>