@using FurBuuks.Models
@model User
@{
    ViewBag.Title = "MyBooks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/Content/MyBooks/css/bootstrap.css" rel="stylesheet" />
<link href="~/Content/MyBooks/css/rotating-card.css" rel="stylesheet" />
<link href="https://netdna.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet" />

<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
        @foreach (var item in Model.Books)
        {
            <div class="col-md-3 col-sm-6">
                <div class="card-container">

                    <div class="card">
                        <div class="front">
                            <div class="content" style="margin:0px; padding:0px;">
                                <div class="main">
                                    <img src="@item.ImageURL" height="100%" width="100%" style="margin:0px; padding:0px;" />
                                </div>
                            </div>

                        </div> <!-- end front panel -->


                        <div class="back">
                            @*<div class="header">
                                    <h5 class="motto">"To be or not to be, this is my awesome motto!"</h5>
                                </div>*@
                            <div class="content">
                                <div class="main">
                                    <h4 class="text-center">Okumaya Başlama Tarihim</h4>
                                    <p class="text-center">@item.BeginTime.ToString("dd.MM.yyyy")</p>
                                    <h4 class="text-center">Okumayı Bitirdiğim Tarihim</h4>
                                    <p class="text-center">@item.EndTime.ToString("dd.MM.yyyy")</p>

                                </div>
                            </div>

                        </div> <!-- end back panel -->
                    </div> <!-- end card -->


                </div> <!-- end card-container -->
            </div>

            }
        </div>
    </div>