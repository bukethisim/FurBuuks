@using FurBuuks.Models
@model List<User>

@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Main Content -->
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {<div class="col-3">
                <img src="@item.ImageURL" style="max-width:100%;" />
            </div>
            <div class="col-9">
                <h3>@item.NameSurname</h3>
                <h5>@item.UserName</h5>
                <p>@item.Bio</p>
            </div>
        }
    </div>
</div>
